<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/settings_main_item_height" >

        <TextView
            android:id="@+id/text_seek_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/checkbox_margin_left_right"
            android:gravity="center_vertical"
            android:text="@string/value_tv"
            android:textSize="@dimen/textview_text_size" />

        <SeekBar
            android:id="@+id/my_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/val_seek_tv"
            android:layout_toRightOf="@+id/text_seek_tv"
            android:paddingLeft="@dimen/checkbox_margin_left_right"
            android:paddingRight="@dimen/checkbox_margin_left_right" />

        <TextView
            android:id="@+id/val_seek_tv"
            android:layout_width="@dimen/textview_text_size_value_width"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="9"
            android:textSize="@dimen/textview_text_size" />
    </RelativeLayout>

</LinearLayout>